

<% if @user_or_book == "1"%>
    <h1>User</h1>
    <table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>

        <% @users.each do |user| %>
        <thead>
        <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>

            <td><%= user.name%></td>


            <td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
        </tr>

    </thead>
<% end %>
</table>








<% elsif @user_or_book == "2" %>
    <h2>Book</h2>

        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>


    <% @books.each do |book| %>
        <thead>
                    <td><%= link_to(book.user) do %>
                        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
                        <% end %>
                    </td>

                    <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>

                    <td><%= book.body %></td>
        </thead>
    <% end %>
    </table>
<% else %>
<% end %>

